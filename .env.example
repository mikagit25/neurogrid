# NeuroGrid Development Environment

# Copy this file to .env and customize for your environment
cp .env.example .env

# Core Configuration
NODE_ENV=development
LOG_LEVEL=info

# Security Configuration - CHANGE THESE IN PRODUCTION!
ADMIN_DEFAULT_PASSWORD=SecureAdmin2024!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=neurogrid
POSTGRES_USER=neurogrid  
POSTGRES_PASSWORD=neurogrid_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=neurogrid_redis_password

# Coordinator Server
COORDINATOR_PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_RATE_LIMIT=100
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Web Interface
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_ADMIN=false

# Node Client Configuration
NEUROGRID_COORDINATOR_URL=http://localhost:3001
NEUROGRID_NODE_TOKEN=your-node-token-here
NEUROGRID_MAX_VRAM_GB=8
NEUROGRID_MAX_CPU_CORES=4
NEUROGRID_LOG_LEVEL=INFO
NEUROGRID_ENABLE_DOCKER=true
NEUROGRID_DATA_DIR=./data

# Model Storage (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=neurogrid
MINIO_SECRET_KEY=neurogrid_minio_password
MINIO_USE_SSL=false
MODEL_BUCKET_NAME=neurogrid-models

# Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3002
GRAFANA_ADMIN_PASSWORD=admin

# External Services (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ANALYTICS_ID=your-analytics-id
WEBHOOK_SECRET=your-webhook-secret-key

# Security Settings
ENABLE_HTTPS=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Feature Flags
ENABLE_TESTNET=true
ENABLE_TOKEN_REWARDS=true
ENABLE_MODEL_VERIFICATION=true
ENABLE_DOCKER_ISOLATION=true

# Development Settings
ENABLE_DEBUG_LOGS=true
ENABLE_API_DOCS=true
ENABLE_METRICS_ENDPOINT=true
HOT_RELOAD=true