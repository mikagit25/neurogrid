  "main": "index.js",
  "scripts": {
    "start": "node index.js smart-router",
    "start:production": "NODE_ENV=production node index.js smart-router",
    "start:coordinator": "node index.js coordinator",
    "start:web": "cd web-interface && npm start",
    "start:node": "node index.js node-client",
    "dev": "concurrently \"npm run dev:coordinator\" \"npm run dev:web\"",
    "test": "npm run test:coordinator && npm run test:web",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "install:all": "npm install && cd coordinator-server && npm install && cd ../web-interface && npm install && cd ../node-client && pip install -r requirements.txt",
    "build": "cd coordinator-server && npm run build && cd ../web-interface && npm run build",
    "test:coordinator": "cd coordinator-server && npm test",
    "test:web": "cd web-interface && npm test",
    "dev:coordinator": "cd coordinator-server && npm run dev",
    "dev:web": "cd web-interface && npm run dev",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "audit": "npm audit && cd coordinator-server && npm audit && cd ../web-interface && npm audit"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
