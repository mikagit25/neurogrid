{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-undef": "error",
    "prefer-const": "warn",
    "no-var": "warn",
    "semi": ["warn", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "comma-dangle": ["warn", "never"],
    "eol-last": "warn",
    "no-trailing-spaces": "warn",
    "indent": ["warn", 2],
    "max-len": ["warn", { "code": 120 }],
    "no-prototype-builtins": "warn",
    "no-dupe-keys": "error",
    "no-unreachable": "error",
    "no-useless-escape": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "coverage/"
  ]
}