# Default Environment Configuration
# This file contains safe default values for development

# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# Database Configuration (Development defaults)
DEV_DATABASE_URL=sqlite:./data/neurogrid.db
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
DB_QUERY_TIMEOUT=30000
DB_ACQUIRE_TIMEOUT=60000

# Redis Configuration (Development defaults)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Authentication Configuration (Development defaults)
JWT_EXPIRES_IN=24h
API_KEY_LENGTH=32

# Rate Limiting Configuration
API_RATE_LIMIT=1000
AUTH_RATE_LIMIT=50
GENERAL_RATE_LIMIT=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:3001

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_INTERVAL=60000
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_FROM=alerts@neurogrid.dev
ALERT_EMAIL_TO=admin@neurogrid.dev

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12

# Payment Gateway Configuration (Development defaults)
PAYMENT_GATEWAY_ENABLED=true
STRIPE_ENABLED=false
PAYPAL_ENABLED=false
CRYPTO_ENABLED=false
BANK_TRANSFER_ENABLED=false

# Exchange Rate Configuration
EXCHANGE_RATE_UPDATE_INTERVAL=300000

# Token Economics
INITIAL_USER_BALANCE=10.0
PLATFORM_FEE_PERCENTAGE=20.0
MIN_WITHDRAWAL_AMOUNT=10.0
MAX_WITHDRAWAL_AMOUNT=10000.0

# Wallet Configuration
WALLET_VERIFICATION_REQUIRED=false
AUTO_CONVERT_ENABLED=false
DEFAULT_CURRENCY=USD

# External Services (Development defaults)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Development Configuration
DEBUG=neurogrid:*
ENABLE_SWAGGER=true
ENABLE_PROFILING=false
MOCK_PAYMENTS=true
SKIP_EMAIL_VERIFICATION=true