# NeuroGrid Coordinator Server Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Database Configuration (Production - PostgreSQL)
DATABASE_URL=postgresql://neurogrid:neurogrid_password@postgres:5432/neurogrid
DB_HOST=postgres
DB_PORT=5432
DB_NAME=neurogrid
DB_USER=neurogrid
DB_PASSWORD=neurogrid_password
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
DB_QUERY_TIMEOUT=30000
DB_ACQUIRE_TIMEOUT=60000

# Development Database (SQLite)
DEV_DATABASE_URL=sqlite:./data/neurogrid.db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
API_KEY_LENGTH=32

# Rate Limiting Configuration
API_RATE_LIMIT=1000
AUTH_RATE_LIMIT=10
GENERAL_RATE_LIMIT=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_INTERVAL=60000
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_FROM=alerts@neurogrid.dev
ALERT_EMAIL_TO=admin@neurogrid.dev

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# Payment Gateway Configuration
PAYMENT_GATEWAY_ENABLED=true

# Stripe Configuration (Card Payments)
STRIPE_ENABLED=true
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_ENABLED=true
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Cryptocurrency Configuration
CRYPTO_ENABLED=true
BITCOIN_NETWORK=testnet
ETHEREUM_NETWORK=goerli
CRYPTO_API_KEY=your_crypto_api_key

# Bank Transfer Configuration
BANK_TRANSFER_ENABLED=true
BANK_SWIFT_CODE=NGRIDUS33
BANK_ACCOUNT_NUMBER=1234567890
BANK_ROUTING_NUMBER=021000021

# Exchange Rate Configuration
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
EXCHANGE_RATE_UPDATE_INTERVAL=300000

# Token Economics
INITIAL_USER_BALANCE=10.0
PLATFORM_FEE_PERCENTAGE=20.0
MIN_WITHDRAWAL_AMOUNT=10.0
MAX_WITHDRAWAL_AMOUNT=10000.0

# Wallet Configuration
WALLET_VERIFICATION_REQUIRED=true
AUTO_CONVERT_ENABLED=false
DEFAULT_CURRENCY=USD

# External Services (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Development Configuration
DEBUG=neurogrid:*
ENABLE_SWAGGER=true
ENABLE_PROFILING=false
MOCK_PAYMENTS=true
SKIP_EMAIL_VERIFICATION=false