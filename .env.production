# NeuroGrid Production Environment
# Copy to .env.production and customize

NODE_ENV=production
LOG_LEVEL=info

# Security Configuration
ADMIN_DEFAULT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_NOW
JWT_SECRET=YOUR_SUPER_SECURE_JWT_SECRET_256_BITS_MINIMUM
ENCRYPTION_KEY=32_CHARACTER_ENCRYPTION_KEY_HERE

# Database Configuration - Production PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=neurogrid_prod
POSTGRES_USER=neurogrid_prod
POSTGRES_PASSWORD=SECURE_DB_PASSWORD_HERE

# Redis Configuration - Production
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=SECURE_REDIS_PASSWORD_HERE

# Production URLs
COORDINATOR_PORT=3001
COORDINATOR_URL=https://api.neurogrid.network
WEB_INTERFACE_URL=https://app.neurogrid.network
ALLOWED_ORIGINS=https://app.neurogrid.network,https://admin.neurogrid.network

# API Configuration
API_RATE_LIMIT=1000
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# SSL/Security
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/neurogrid.network.crt
SSL_KEY_PATH=/etc/ssl/private/neurogrid.network.key
CORS_ORIGINS=https://app.neurogrid.network

# Performance
CLUSTER_MODE=true
WORKERS=2
MAX_REQUEST_SIZE=10mb
COMPRESSION=true
CACHE_TTL=3600

# Monitoring & Logging
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
LOG_REQUESTS=true
SENTRY_DSN=YOUR_SENTRY_DSN_FOR_ERROR_TRACKING

# Feature Flags
ENABLE_ADMIN_PANEL=true
ENABLE_API_DOCS=false
ENABLE_DEBUG_LOGS=false
ENABLE_TESTNET=false

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-app-specific-password

# Payment Gateway (Production)
STRIPE_PUBLIC_KEY=pk_live_YOUR_LIVE_STRIPE_PUBLIC_KEY
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# External Services
MODEL_STORAGE_BUCKET=neurogrid-models-prod
CDN_URL=https://cdn.neurogrid.network
ANALYTICS_ID=your-production-analytics-id

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=neurogrid-backups