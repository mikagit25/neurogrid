# Production Environment Template
# Copy to .env.production and update with your domain

# REQUIRED: Update these URLs for your production domain
NEXT_PUBLIC_API_URL=https://your-api-domain.com
NEXT_PUBLIC_WS_URL=wss://your-api-domain.com/ws
NEXT_PUBLIC_APP_URL=https://your-domain.com

# OR for HTTP (not recommended for production)
# NEXT_PUBLIC_API_URL=http://your-api-domain.com
# NEXT_PUBLIC_WS_URL=ws://your-api-domain.com/ws
# NEXT_PUBLIC_APP_URL=http://your-domain.com

NODE_ENV=production
NEXT_PUBLIC_ENV=production

# Production features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_ADMIN=true
NEXT_PUBLIC_ENABLE_DEBUG=false

# Site info
NEXT_PUBLIC_SITE_NAME="NeuroGrid - AI Inference Platform"
NEXT_PUBLIC_SITE_DESCRIPTION="Decentralized AI inference network with GPU power sharing"
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Analytics & Monitoring
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=true

# Security
NEXT_PUBLIC_SECURE_MODE=true
NEXT_PUBLIC_ENABLE_CORS=true