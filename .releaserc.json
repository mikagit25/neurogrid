{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "beta"
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/npm",
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "coordinator-server/dist/**",
            "label": "Coordinator Server Build"
          },
          {
            "path": "web-interface/dist/**",
            "label": "Web Interface Build"
          },
          {
            "path": "docs/api/**",
            "label": "API Documentation"
          }
        ]
      }
    ],
    "@semantic-release/git"
  ],
  "preset": "conventionalcommits",
  "releaseRules": [
    {
      "type": "feat",
      "release": "minor"
    },
    {
      "type": "fix",
      "release": "patch"
    },
    {
      "type": "docs",
      "release": "patch"
    },
    {
      "type": "perf",
      "release": "patch"
    },
    {
      "type": "refactor",
      "release": "patch"
    },
    {
      "scope": "breaking",
      "release": "major"
    }
  ]
}