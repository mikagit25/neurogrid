# NeuroGrid Production Quick Launch
# Простая конфигурация для быстрого запуска продукта

NODE_ENV=production
LOG_LEVEL=info

# Сервер конфигурация
SERVER_PORT=8080
WEB_PORT=3000

# Простая database (для enhanced-server - в памяти)
DATABASE_TYPE=memory

# Безопасность
JWT_SECRET=NeuroGrid2024ProductionKey
API_KEY=neurogrid_api_key_2024

# URLs для production
API_URL=http://localhost:8080
WEB_URL=http://localhost:3000

# Features
ENABLE_ANALYTICS=false
ENABLE_MONITORING=true
ENABLE_ADMIN=true
ENABLE_DEBUG=false

# Rate limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=100

# Cache settings
CACHE_TTL=300
CACHE_ENABLED=true