# Production Environment Configuration
# Copy this file to .env.production and fill in your values

# ================================
# Database Configuration
# ================================
POSTGRES_USER=neurogrid
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_PORT=5432

# ================================
# Redis Configuration
# ================================
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379

# ================================
# Application Security
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-64-characters
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key

# ================================
# API Configuration
# ================================
API_RATE_LIMIT=100
MAX_REQUEST_SIZE=10mb
CORS_ORIGIN=https://neurogrid.network
LOG_LEVEL=info

# ================================
# Service Ports
# ================================
COORDINATOR_PORT=3001
WEB_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# ================================
# External URLs
# ================================
NEXT_PUBLIC_API_URL=https://api.neurogrid.network
NEXT_PUBLIC_WS_URL=wss://api.neurogrid.network/ws
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ================================
# Monitoring & Analytics
# ================================
ENABLE_SWAGGER=false
ENABLE_METRICS=true
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password
GRAFANA_ROOT_URL=https://monitoring.neurogrid.network
GRAFANA_SECRET_KEY=your-grafana-secret-key

# ================================
# Object Storage (MinIO)
# ================================
MINIO_ROOT_USER=neurogrid-admin
MINIO_ROOT_PASSWORD=your-secure-minio-password
MINIO_BROWSER_REDIRECT_URL=https://storage.neurogrid.network
MINIO_SERVER_URL=https://storage-api.neurogrid.network

# ================================
# Backup Configuration
# ================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
DATA_PATH=./data

# ================================
# Error Tracking
# ================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# SSL/TLS Configuration
# ================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key